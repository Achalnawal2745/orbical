{
  "manifest_version": 3,
  "name": "OrbiCal",
  "version": "2.0.0",
  "description": "A beautiful, feature-rich calendar extension for Chrome with event management",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "OrbiCal",
    "default_icon": {
      "16": "images/icon-128.png",
      "48": "images/icon-128.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-128.png",
    "48": "images/icon-128.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Open OrbiCal"
    }
  }
}